#!/usr/bin/ruby

#
## https://rosettacode.org/wiki/Sorting_algorithms/Bubble_sort
#

func bubble_sort(Array arr) -> Array {
    loop {
        var swapped = false
        { |i|
            if (arr[i] > arr[i+1]) {
                arr[i, i+1] = arr[i+1, i]
                swapped = true
            }
        } << ^arr.end
        swapped || break
    }
    return arr
}

var numbers = [7,6,5,9,8,4,3,1,2,0];
say bubble_sort(numbers);
