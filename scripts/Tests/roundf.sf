#!/usr/bin/ruby

#
## Tests for Number.roundf()
#

 var errors = 0;

[
    [+1.6,      +2,         0],
    [+1.5,      +2,         0],
    [+1.4,      +1,         0],
    [+0.6,      +1,         0],
    [+0.5,      0,          0],
    [+0.4,      0,          0],
    [-0.4,      0,          0],
    [-0.5,      0,          0],
    [-0.6,      -1,         0],
    [-1.4,      -1,         0],
    [-1.5,      -2,         0],
    [-1.6,      -2,         0],
    [3.016,     3.02,      -2],
    [3.013,     3.01,      -2],
    [3.015,     3.02,      -2],
    [3.045,     3.04,      -2],
    [3.04501,   3.05,      -2],
    [3.03701,   3.04,      -2],
    [-1234.555, -1000,      3],
    [-1234.555, -1200,      2],
    [-1234.555, -1230,      1],
    [-1234.555, -1235,      0],
    [-1234.555, -1234.6,   -1],
    [-1234.555, -1234.56,  -2],
    [-1234.555, -1234.555, -3],
    [-2.7,      -3,         0],
    [-2.5,      -2,         0],
    [-2.3,      -2,         0],
    [-2.0,      -2,         0],
    [-1.7,      -2,         0],
    [-1.5,      -2,         0],
    [-1.3,      -1,         0],
    [-1.0,      -1,         0],
    [-0.7,      -1,         0],
    [-0.5,      0,          0],
    [-0.3,      0,          0],
    [+0.0,      0,          0],
    [+0.3,      0,          0],
    [+0.5,      0,          0],
    [+0.7,      1,          0],
    [+1.0,      1,          0],
    [+1.3,      1,          0],
    [+1.5,      2,          0],
    [+1.7,      2,          0],
    [+2.0,      2,          0],
    [+2.3,      2,          0],
    [+2.5,      2,          0],
    [+2.7,      3,          0],
].each { |g|
    var (n, expected, nth) = g...;
    var r = n.round(nth);

    print "roundf(#{n}, #{nth}) = #{r} "

    if (r != expected) {
        say " -- expected: #{expected}"
        ++errors;
    } else {
        print "\n";
    }
}

if (errors > 0) {
    die "Program terminated with #{errors} errors!";
}
