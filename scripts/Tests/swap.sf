}

var (a, b) = ([1], [2]);
swap_1(\a, \b);
assert_eq(a, [2]);
assert_eq(b, [1]);

swap_2(\b, \a);
assert_eq(a, [1]);
assert_eq(b, [2]);

swap_3(\b, \a);
assert_eq(a, [2]);
assert_eq(b, [1]);

say "** Test passed!";
