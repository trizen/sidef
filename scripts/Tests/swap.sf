func swap_1(Ref a, Ref b) {
    var tmp = *a;
    *a = *b;
    *b = tmp;
}

func swap_2(Ref a, Ref b) {
    (*a, *b) = (*b, *a);
}

func swap_3(Ref a, Ref b) {
