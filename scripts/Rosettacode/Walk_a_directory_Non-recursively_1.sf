#!/usr/bin/ruby

#
## http://rosettacode.org/wiki/Walk_a_directory/Non-recursively
#

func file_match(callback is Block, pattern=/\.txt\z/, path=Dir.cwd) {
    path.open(\var dir_h) || return;
    dir_h.entries.each { |entry|
        if (entry.basename ~~ pattern) {
            callback(entry);
        }
    }
}
