#!/usr/bin/ruby

#
## http://rosettacode.org/wiki/Sierpinski_triangle
#

func sierpinski_triangle(n) {
    var triangle = ['*'];
    { |i|
        var sp = (' ' * Math.pow(2, i-1));
        triangle = (triangle.map {|x| sp + x + sp} +
                    triangle.map {|x| x + ' ' + x});
    } * n;
    triangle.join("\n");
}
