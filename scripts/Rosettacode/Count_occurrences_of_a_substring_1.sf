#!/usr/bin/ruby

#
## http://rosettacode.org/wiki/Count_occurrences_of_a_substring
#

func countSubstring(s, ss) {
    var re = Regex.new(ss.escape, 'g');      # 'g' for global
    var counter = 0;
    while (s =~ re) { ++counter };
    return counter;
}
