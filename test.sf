func lev(s, t) {

    s.is_empty && return t.len;
    t.is_empty && return s.len;

    var s1 = s.ft(1);
    var t1 = t.ft(1);

    s[0] == t[0] ? lev(s1, t1)
                 : 1+min(
                        lev(s1, t1),
                        lev(s,  t1),
                        lev(s1, t )
                     );
}

say lev(%c"abcz", %c"aecd");        # prints: 2

